{
  "name": "decks",
  "version": "0.0.1",
  "description": "Public decks for the We Will Craft classes.",
  "author": "We Will Craft <we@willcraft.software>",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/",
    "build": "npm-run-all clean --parallel build:*",
    "build:deck": "marp --no-stdin --input-dir . --output dist/",
    "start": "npm-run-all clean --parallel start:*",
    "start:server": "http-server dist/ -a 0.0.0.0 -p 8080",
    "start:deck": "marp --watch --input-dir . --output dist/"
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^0.21.1",
    "cpy-cli": "^3.1.1",
    "http-server": "^0.12.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "homepage": "https://github.com/wewillcraft/decks#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wewillcraft/decks.git"
  },
  "bugs": {
    "url": "https://github.com/wewillcraft/decks/issues"
  },
  "license": "MIT"
}
