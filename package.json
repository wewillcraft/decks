{
  "name": "decks",
  "version": "0.0.1",
  "description": "Public decks for the We Will Craft classes.",
  "author": "We Will Craft <we@willcraft.software>",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/",
    "start:server": "serve dist/ -l 8080",
    "start:deck": "marp --watch --input-dir src/ --output dist/",
    "start": "npm-run-all clean --parallel start:*",
    "build:deck": "marp --no-stdin --input-dir src/ --output dist/",
    "prepare:rename": "node ./bin/rename.js",
    "prepare:copy": "cpy \"static/**/*\" dist/",
    "build": "npm-run-all --serial clean build:* prepare:*"
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^0.21.1",
    "cpy-cli": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "readdirp": "^3.4.0",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2"
  },
  "homepage": "https://github.com/wewillcraft/decks#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wewillcraft/decks.git"
  },
  "bugs": {
    "url": "https://github.com/wewillcraft/decks/issues"
  },
  "license": "MIT"
}
